<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       					http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!--  Default scope of spring bean is a singleton -->
	<bean id="order" class="springcorescopeexample.beans.Order">
	</bean>
	<!--  scope = prototype attribute creates different spring bean whenever request for new bean is made -->
	<bean id="newOrder" class="springcorescopeexample.beans.Order" scope="prototype">
	</bean>
</beans>